<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:layout_width="fill_parent"
            android:id="@+id/headline"
            android:layout_height="wrap_content"
            android:text="Headline"
            android:textSize="22dip"
            android:textColor="@color/snipText"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="3dip"
            android:layout_marginBottom="3dip"/>

        <TextView android:layout_width="fill_parent"
            android:id="@+id/author"
            android:layout_height="wrap_content"
            android:text="כותב"
            android:textSize="10dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <TextView android:layout_width="fill_parent"
            android:id="@+id/publishtime"
            android:layout_height="wrap_content"
            android:text="תאריך"
            android:textSize="10dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <ImageView
            android:id="@+id/topPicture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/alonsnipthailand"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView android:layout_width="fill_parent"
            android:id="@+id/pictureSubtitles"
            android:layout_height="wrap_content"
            android:text="כתוביות"
            android:textSize="10dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <TextView android:id="@+id/fullText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="false"
            android:textSize="16dip"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="1dip"/>

        <TextView android:layout_width="fill_parent"
            android:id="@+id/starAfterText"
            android:layout_height="wrap_content"
            android:text="text text text"
            android:textSize="15dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <TextView android:layout_width="fill_parent"
            android:id="@+id/source1"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:textSize="15dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <TextView android:layout_width="fill_parent"
            android:id="@+id/source2"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:textSize="15dip"
            android:gravity="right"
            android:layout_marginRight="8dip"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="1dip"/>

        <Button android:id="@+id/btnLike"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:text="Like"/>

        <Button android:id="@+id/btnDislike"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:text="Dislike"/>

        <Button android:id="@+id/btnShare"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:text="Share"/>

        <Button android:id="@+id/btnSaveForLater"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dip"
            android:layout_marginLeft="0dip"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="0dip"
            android:text="Save For Later"/>

    </LinearLayout>
</ScrollView>