<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    android:id="@+id/recLayout">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        card_view:cardElevation="0dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        card_view:cardCornerRadius="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/snipCardBackground"
            >
            <snip.androidapp.SquareImageView
                android:id="@+id/thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_test"
                android:layout_gravity="left"
                android:layout_weight="0.3"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_toRightOf="@+id/thumbnail"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                >

            <TextView
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Hello World Hello World Hello World Hello World Hello World"
                android:textSize="14dp"
                android:textColor="@color/snipCardText"
                android:gravity="right"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="3dp"

                />
                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Snip"
                    android:textSize="14dp"
                    android:textColor="@color/snipCardTextSecondary"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/headline"
                    />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Ran Reicman"
                    android:textSize="14dp"
                    android:textColor="@color/snipCardTextSecondary"
                    android:layout_toLeftOf="@id/publisher"
                    android:layout_marginRight="5dp"
                    android:layout_below="@id/headline"

                    />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>