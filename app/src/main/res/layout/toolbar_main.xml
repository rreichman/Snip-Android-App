<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:minHeight="@dimen/toolbar_height"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="?attr/colorPrimary"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="@dimen/basic_margin_horz"
    android:elevation="4dp"
    app:titleTextAppearance="@style/Toolbar.TitleText"
    app:popupTheme="@style/PopupMenuStyle"
    android:theme="@style/ToolbarTheme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/snipLogoOnToolbar"
            android:layout_width="@dimen/toolbar_item_size"
            android:layout_height="@dimen/toolbar_item_size"
            android:src="@drawable/home_icon"
            android:adjustViewBounds="true"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="3dp"
            />

        <ImageView
            android:id="@+id/likeButtonOnToolbar"
            android:layout_width="@dimen/toolbar_item_size"
            android:layout_height="@dimen/toolbar_item_size"
            android:src="@drawable/heart_icon_hollow_black"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/snoozeButtonOnToolbar"
            android:layout_width="@dimen/toolbar_item_size"
            android:layout_height="@dimen/toolbar_item_size"
            android:src="@drawable/snooze_black"
            android:clickable="true"
            android:layout_toLeftOf="@id/likeButtonOnToolbar"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>

