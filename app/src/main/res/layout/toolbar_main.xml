<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:minHeight="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="@dimen/basic_margin_horz"
    android:elevation="4dp"
    app:titleTextAppearance="@style/Toolbar.TitleText"
    app:popupTheme="@style/PopupMenuStyle"
    android:theme="@style/ToolbarTheme">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/likeButtonOnToolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart_icon_small"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            />
        <ImageView
            android:id="@+id/snoozeButtonOnToolbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_snooze"
            android:clickable="true"
            android:layout_toLeftOf="@id/likeButtonOnToolbar"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</android.support.v7.widget.Toolbar>

