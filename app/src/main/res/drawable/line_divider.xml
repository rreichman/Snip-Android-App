<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/leftDivider">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >

            <size
                android:width="1dp"
                android:height="1dp"
                />
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
    <item android:id="@+id/gradientDivider">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <size
                android:width="1dp"
                android:height="1dp"
                />
            <gradient
                android:angle="0"
                android:startColor="@color/app_background"
                android:centerColor="@color/divider"
                android:endColor="@color/app_background"
                />
        </shape>
    </item>
    <item android:id="@+id/rightDivider">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <size
                android:width="1dp"
                android:height="1dp"
                />
            <solid
                android:color="@color/white"/>
        </shape>
    </item>
</layer-list>