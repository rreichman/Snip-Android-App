
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/app_background</item>
        <!--<item name="colorAccent">#FFAB40</item>-->
    </style>
    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/toolbarBack</item>
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@color/toolbarTitle</item>
        <item name="android:textColorSecondary">@color/toolbarTitle</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <!--<item name="actionMenuTextColor">@android:color/holo_green_light</item>-->
        <!-- Tints the input fields like checkboxes and text fields -->
