        <!--&lt;!&ndash; Applies to views in their normal state. &ndash;&gt;-->
        <!--<item name="colorControlNormal">@color/controlNormal</item>-->
        <!--&lt;!&ndash; Applies to views in their activated state (i.e checked or switches) &ndash;&gt;-->
        <!--<item name="colorControlActivated">@color/controlActivated</item>-->
        <!--&lt;!&ndash; Applied to framework control highlights (i.e ripples or list selectors) &ndash;&gt;-->
        <!--<item name="colorControlHighlight">@color/controlActivated</item>-->

    </style>
    <style name="SnipCards" parent="AppTheme">
    </style>
    <style name="SnipCards.CardText">

        <item name="android:gravity">right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
    </style>
    <style name="SnipCards.CardText.Main">
        <item name="android:maxLines">3</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/snipCardText</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <style name="SnipCards.CardText.Secondary">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/snipCardTextSecondary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="SingleSnip" parent="AppTheme">

    </style>

    <style name="SingleSnip.Image">
    </style>

    <style name="SingleSnip.Text">
        <item name="android:textColor">@color/snipText</item>
        <item name="android:textSize">14dp</item>
        <item name="android:lineSpacingExtra">@dimen/text_line_spacing</item>
    </style>

    <style name="SingleSnip.Text.Headline">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleSnip.Text.ImageDesc">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="SingleSnip.Text.Author">
        <item name="android:textSize">8dp</item>
        <item name="android:textColor">@color/snipCardTextSecondary</item>
    </style>



    <style name="LoginAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LoginAppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>

        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="TempAppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="LoginAppTheme.Title">
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginAppTheme.SecondaryTitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginAppTheme.LinkText">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="android:background">@color/brightGray</item>
        <item name="android:textSize">20dp</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
</resources>


